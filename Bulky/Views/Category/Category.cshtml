@model List<Category>;
<div class="row">
    <div class="col-9">
        <h1>Category</h1>
    </div>
    <div class="col-3">
        <a asp-controller="Category" asp-action="Create" class="btn btn-dark">
            Create Category
        </a>
    </div>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Display Order</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.OrderBy(x => x.DisplayOrder))
        {
            <tr>
                <td scope="row">@category.CategoryName</td>
                <td>@category.DisplayOrder</td>
                <td>
                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.CategoryId" class="btn btn-dark">
                        <i class="bi bi-pencil"></i>
                        Edit
                    </a>
                </td>
                <td>
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.CategoryId" class="btn btn-danger">
                        <i class="bi bi-trash"></i>
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>

</table>